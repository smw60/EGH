<body>
    <div class="navbar navbar-default  navbar-fixed-top">
        <div class="container">
            <div class="navbar-brand ">
                <a href="/"><img src="/content/Layout_Mobile_Whiteframe1.png" alt="EGH"/></a>
            </div>            
            <!--Главное меню-->
            <ul class="navbar-nav nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle btn btn-link" data-toggle="dropdown" role="button" aria-expanded="false">Главное меню <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>@Html.ActionLink("Прогноз",                                 "Index", "EGHRGE")  </li>
                        <li>@Html.ActionLink("Оценка результатов прогнозирования",      "Index", "EGHCEQ")  </li>
                        <li>@Html.ActionLink("Классификация прогнозируемого состояния", "Index", "EGHGEA")  </li>

                    </ul>
                </li>
            </ul>
        </div>

</div>
    <div class="osnova">        
        <!--Заголовок индивидуальный для страниц-->
        <div class="container">
    @if (ViewBag.EGHLayout == "RGE")
    {
        <h2>Прогноз</h2>
        <span> @Html.ActionLink("Прогноз",                        "Index", "EGHRGE") </span>
        <span> @Html.ActionLink("Опорные точки",                  "Index", "EGHRGE") </span>
        <span> @Html.ActionLink("Природоохранные объекты",        "Index", "EGHRGE") </span>
        <span> @Html.ActionLink("Отчеты",                         "Index", "EGHRGE") </span>
        <span> @Html.ActionLink("Справочники",                    "Index", "EGHRGE") </span>
        <span> @Html.ActionLink("Типы инцидентов",                "Index", "EGHRGE") </span>   
        <span> @Html.ActionLink("Типы природоохранных объектов",  "Index", "EGHRGE") </span> 
        <span> @Html.ActionLink("Типы грунтов",                   "Index", "EGHRGE") </span>  
        <span> @Html.ActionLink("Категории земли",                "Index", "EGHRGE") </span>        
        <span> @Html.ActionLink("Коэффициент растекания",         "Index", "EGHRGE") </span>     
        
    }
    else if (ViewBag.EGHLayout == "CEQ")
    {
        <h2>Оценка результатов прогнозирования</h2>
        <span> @Html.ActionLink("Результаты прогнозирования", "Index", "EGHCEQ") </span>    
        <span> @Html.ActionLink("Оценка прогноза",            "Index", "EGHCEQ") </span>     
        <span> @Html.ActionLink("Отчеты",                     "Index", "EGHCEQ") </span>       
    }
    else if (ViewBag.EGHLayout == "GEA")
    {
        <h2>Классификация прогнозируемого состояния </h2>
        <span> @Html.ActionLink("Оценка прогноза",                         "Index", "EGHGEA") </span>    
        <span> @Html.ActionLink("Классификация прогнозируемого состояния", "Index", "EGHGEA") </span>     
        <span> @Html.ActionLink("Отчеты",                                  "Index", "EGHGEA") </span>         
    }
    else if (ViewBag.EGHLayout == "ORT")
    {
        <h2>Технологии реабилитации</h2>
        <span> @Html.ActionLink("Классификация прогнозируемого состояния", "Index", "EGHORT") </span>     
        <span> @Html.ActionLink("Технологии реабилитации",                 "Index", "EGHORT") </span> 
        <span> @Html.ActionLink("Отчеты",                                  "Index", "EGHORT") </span>     
        
        
    }
    else if (ViewBag.EGHLayout == "CCO")
    {
    <h2>EGHCCO - Химический состав нефтей   на оранжевую линию </h2>
    }
    else if (ViewBag.EGHLayout == "CAI")
    {
    <h2>EGHCAI - Условия техногенной нагрузки</h2>
    }
    


        </div>

        <!--Меню индивидуальное для страниц-->
       
            <div class=" container mainbody">
                @RenderBody()
            </div>
    </div>
    <footer class="top-space">
        <div class="footer1">
            <div class="container">
                <div class="row">

                    <div class="col-md-3">
                        <h3 class="widget-title">Контакты:</h3>

@model EGH01.Controllers.EGHRGEController.InputDate

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/EGHLayout.cshtml";
}

<h2>EGHRGE - Реабилитация геологической среды</h2>



 @ViewBag.msg
<section>
    <article>
        @Html.ActionLink("EGHRGE - Моделирование", "Report")
    </article>
    <article>
        @Html.ActionLink("EGHRGE - Отчет", "Report")
    </article>
</section>

  <section>
    <article>
        <h1>Входные данные</h1>
        <h5>
            Дата происшествия
            @Html.TextBoxFor(m => Model.DateIncident, String.Format("{0:d}", @Model.DateIncident.ToShortDateString()), new { type = "date" })
        </h5>
    </article>

      <article>
          <h5>
              Дата поступления сообщения
              @Html.TextBoxFor(m => Model.DateMessage, String.Format("{0:d}", @Model.DateMessage.ToShortDateString()), new { type = "date" })
          </h5>
      </article>

      <article>
          <h5>
              Тип происшествия
              @Html.DropDownList(@Model.TypeNNP2.ToString(), new SelectList(new [] { "Нефтепровод", "Резервуар Наземный", "Подземный резервуар", "Авто Транспорт", "Железнодорожный Транспорт" }))
          </h5>
    </article>

    <article>
        <h5>
            Объект:
            @Html.DropDownList("Объект", new SelectList(new[] { "", "АЗС 28", "Нефтебаза", "Хранилище 4" }))
        </h5>
        <h5>
            Координаты объекта:
        </h5>
        <h5>Широта: @Html.TextBox("Дата", @Model.Coordlatitudedegr) ° @Html.TextBox("Дата", @Model.Coordlatitudemin) ′</h5>
        <h5>Долгота: @Html.TextBox("Дата", @Model.Coordlongitudedegr) ° @Html.TextBox("Дата", @Model.Coordlongitudemin) ′</h5>
      </article>

      <article>
          <h5>
              Объем ННП
              @Html.TextBoxFor(m => Model.volumeNNP) (м3)
          </h5>
      </article>

      <article>
          <h5>
              Тип ННП
              @Html.DropDownList(@Model.TypeNNP2.ToString(), new SelectList(new[] { "Нефть", "Бензин", "Мазут" }))
          </h5>
      </article>

      <article>
          <h5>
              Погодные условия.
              Температура: @Html.TextBox("Температура", @Model.Temp) Влажность: @Html.TextBox("Влажность", @Model.Humidity)
          </h5>
      </article>

      </section>


<section style="border: double; padding: 10px">
    <article>

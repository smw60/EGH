    <article>
        <h4>Список природоохранных объектов:</h4>
        <h5>
            Достигнуты по поверхности:
        </h5>
        @*@Html.DropDownList(@Model.TypeNNP2.ToString(), new SelectList(new[] { "Объект1", "Объект2", "Объект3" }))*@
        <table border="1">
            <tr>
                <th>Наименование</th>
                <th>Время достижения</th>
                <th>Концентрация</th>
            </tr>

            
            @foreach (var item in Model.TypeObj)
            { 
                <tr>
                    <td> @Html.ValueFor(m => item)</td>
